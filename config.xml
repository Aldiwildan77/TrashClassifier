<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.trashclassifier" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Trash Classifier</name>
    
    <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
    <allow-navigation href="*://*/*"/>
    <allow-navigation href="*://*/*/*/*"/>
    <allow-intent href="*://*/*"/>

    <description>
        A blank PhoneGap app.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
